<div class='container'>
  <div class='row'>
    <div class='col-xs col-md-12 be-soft_gray'>
      <h1>Lista de Vehiculos de Concesionarios</h1>      
    </div>
  </div>
  <div class='row'>
    <div class='col-xs col-md-8'>
      <div class="table-responsive no-margins">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Concesionario</th>
              <th>Placa</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @vehicles.each do |vehicle| %>
              <tr>
                <td><%= vehicle.concessionary.name %></td>
                <td><%= vehicle.plate %></td>
                <td><%= link_to vehicle do %> <%= octicon 'eye', class:'rigth' %> <% end %></td>
                <td><%= link_to edit_vehicle_path(vehicle) do %> <%= octicon 'pencil', class:'rigth' %> <% end %> </td>
                <td><%= link_to vehicle, method: :delete, data: { confirm: 'Esta usted seguro?' } do %>
                    <%= octicon 'trashcan', class:'rigth' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-xs col-md-4'>
      <br>
      <%= link_to 'Nuevo Vehiculo', new_vehicle_path, class:'btn btn-default btn-md' %>
    </div>
    <div class='col-xs col-md-8'>
      <%= will_paginate @vehicles, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div


