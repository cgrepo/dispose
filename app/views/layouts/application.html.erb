<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <section id="myheader">
    <div class="container">
      <div class="row">
        <div class="col-xs col-md-12">
          <% if logged_in? %>
            <span class="pull-left">
              usuario [ <%= current_user.name.upcase %> ]
            </span>
            <span class="pull-right">
             	<%= link_to "Logout", logout_path, method: :delete, class:'btn btn-danger btn-sm btn-transparent ' %> 
              <span class="glyphicon glyphicon-log-in"></span>
            </span>
          <% end %>
          <br>
          <% flash.each do |key, value| %>
             <p id='<%= key %>'><%= value %></p>
          <% end %>
          <%#= logged_in? %>
        </div>
      </div>
    </div>
  </section>
<%= yield %>

</body>
</html>
