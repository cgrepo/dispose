<div class='container'>
  <div class='row'>
    <div class='col-xs col-md-12 be-soft_gray'>
      <h1>Lista Concesionarios</h1>      
    </div>
  </div>
  <div class='row'>
    <div class='col-xs col-md-12'>
      <%= bootstrap_form_tag id:'search', url: '/search', method:'get', remote:false, layout: :inline do |f| %>
        <%= f.text_field_with_bootstrap :name, label:'Concesionario' %>
        <%= submit_tag 'search', class:'btn btn-default btn-md srch' %>
        <%#= link_to 'BUSCAR', get_byName_concessionaries_path(format:'js'), class:'btn btn-default btn-md srch' %>
        <%#= button_tag 'buscar2' %>
      <% end %>
    </div>
  </div>
  <div class='row cube'></div>
  <div class='row'>
    <div class='col-xs col-md-12'>
      <div class="table-responsive no-margins">
        <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Telephone</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @concessionaries.each do |concessionary| %>
            <tr>
              <td><%= concessionary.name %></td>
              <td><%= concessionary.telephone %></td>
              <td><%= link_to 'Mostrar', concessionary %></td>
              <td><%= link_to 'Editar', edit_concessionary_path(concessionary) %></td>
              <td><%= link_to 'Borrar', concessionary, method: :delete, data: { confirm: 'Esta usted seguro?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>      
    </div>
  </div>
</div>

<br>
<%= link_to 'Nuevo', new_concessionary_path, class:'btn btn-default btn-lg' %>
<%= will_paginate @concessionaries %>