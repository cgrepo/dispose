<div class="container">
  <div class='row'>
    <h1>Lista de Concesionarios</h1>
  </div>
  <div class='row'>
    <div class='col-xs-6 col-md-6'>
      <div class="table-responsive no-margins">
        <table class="table table-hover table-striped">
          <thead>
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th colspan="3"></th>
      </tr>
    </thead>
          <tbody>
      <% @concessionaries.each do |concessionary| %>
        <tr>
          <td><%= concessionary.name %></td>
          <td><%= concessionary.phone %></td>
          <td><%= link_to 'Show', concessionary %></td>
          <td><%= link_to 'Edit', edit_concessionary_path(concessionary) %></td>
          <td><%= link_to 'Destroy', concessionary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
        </table>
      </div>
      <br>
      <%= link_to 'Agregar_Concesionario', new_concessionary_path, class:'btn btn-default btn-lg be-round_soft_gray' %>
      </div>
  </div>
</div>
