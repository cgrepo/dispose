<div class='container'>
  <div class='row'>
    <div class='col-xs col-md-12 be-soft_gray'>
      <h1>Lista Concesionarios</h1>      
    </div>
  </div>
  <div class='row'>
    <div class='col-xs col-md-12'>
      <div class="table-responsive no-margins">
        <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Telephone</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @concessionaries.each do |concessionary| %>
            <tr>
              <td><%= concessionary.name %></td>
              <td><%= concessionary.telephone %></td>
              <td><%= link_to 'Show', concessionary %></td>
              <td><%= link_to 'Edit', edit_concessionary_path(concessionary) %></td>
              <td><%= link_to 'Destroy', concessionary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>      
    </div>
  </div>
</div>

<br>
<%= link_to 'Nuevo', new_concessionary_path, class:'btn btn-default btn-lg' %>
<%= will_paginate @concessionaries %>